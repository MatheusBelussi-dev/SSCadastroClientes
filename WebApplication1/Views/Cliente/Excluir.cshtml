@model CadastroClientes.ViewModel.ClienteExcluir
@{
    ViewBag.Title = "Excluir Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<fieldset>
    <div class="container-fluid">

        <h4 class="mx-5"><strong>Excluir Cliente</strong></h4>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(c => c.Id)

            <div class="card mx-5">
                <div class="row px-3">
                    <div class="col-lg-12">
                        <div class="alert alert-danger text-uppercase text-center">
                            <strong>Você tem certeza que deseja excluir este cliente?</strong>
                        </div>
                    </div>
                </div>

                <div class="row px-3">
                    <div class="col-lg-12">
                        <table class="table table-bordered table-striped text-center">
                            <tr>
                                <th width="33%">Nome</th>
                                <th width ="33%">Documento</th>
                                <th width="32%">Tipo</th>
                            </tr>
                            <tr>
                                <td>@Model.Nome</td>
                                <td>@Model.Documento</td>
                                <td>@Model.Tipo</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="row px-3">
                    <div class="col-lg-12">
                        <a href="@Url.Action("Index")" class="btn btn-outline-dark">
                            Cancelar
                        </a>
                        <input type="submit" value="Confirmar" class="btn btn-dark">
                    </div>
                </div>
                <br />
            </div>
        }
    </div>
</fieldset>